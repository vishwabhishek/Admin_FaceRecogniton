{
  "designSystem": {
    "name": "Modern Banking Dashboard",
    "version": "1.0",
    "description": "A comprehensive design system for financial dashboard applications with clean, modern aesthetics and strong visual hierarchy",
    
    "colorPalette": {
      "primary": {
        "blue": "#4F46E5",
        "blueLight": "#6366F1",
        "blueDark": "#3730A3"
      },
      "secondary": {
        "red": "#EF4444",
        "redLight": "#F87171",
        "green": "#10B981",
        "greenLight": "#34D399",
        "orange": "#F59E0B",
        "orangeLight": "#FBBF24",
        "purple": "#8B5CF6",
        "purpleLight": "#A78BFA",
        "cyan": "#06B6D4",
        "cyanLight": "#22D3EE",
        "pink": "#EC4899",
        "pinkLight": "#F472B6"
      },
      "neutral": {
        "white": "#FFFFFF",
        "gray50": "#F9FAFB",
        "gray100": "#F3F4F6",
        "gray200": "#E5E7EB",
        "gray300": "#D1D5DB",
        "gray400": "#9CA3AF",
        "gray500": "#6B7280",
        "gray600": "#4B5563",
        "gray700": "#374151",
        "gray800": "#1F2937",
        "gray900": "#111827",
        "black": "#000000"
      },
      "semantic": {
        "success": "#10B981",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "info": "#3B82F6"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
        "mono": "'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, monospace"
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem"
      },
      "fontWeights": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeights": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.75
      }
    },

    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem"
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.25rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "2xl": "1.5rem",
      "full": "50%"
    },

    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
    },

    "layout": {
      "sidebar": {
        "width": "280px",
        "background": "white",
        "borderRight": "1px solid #E5E7EB",
        "padding": "1.5rem 0"
      },
      "header": {
        "height": "80px",
        "background": "white",
        "borderBottom": "1px solid #E5E7EB",
        "padding": "0 2rem"
      },
      "content": {
        "padding": "2rem",
        "background": "#F9FAFB",
        "minHeight": "100vh"
      },
      "containerMaxWidth": "1400px",
      "gridGap": "1.5rem"
    },

    "components": {
      "card": {
        "base": {
          "background": "white",
          "borderRadius": "0.75rem",
          "boxShadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
          "padding": "1.5rem",
          "border": "1px solid #F3F4F6"
        },
        "variants": {
          "metric": {
            "padding": "2rem",
            "textAlign": "left"
          },
          "chart": {
            "padding": "1.5rem",
            "minHeight": "300px"
          },
          "list": {
            "padding": "0",
            "overflow": "hidden"
          }
        }
      },

      "button": {
        "base": {
          "fontWeight": 500,
          "borderRadius": "0.5rem",
          "padding": "0.75rem 1.5rem",
          "fontSize": "0.875rem",
          "lineHeight": "1.25",
          "transition": "all 0.2s ease",
          "border": "none",
          "cursor": "pointer"
        },
        "variants": {
          "primary": {
            "background": "#4F46E5",
            "color": "white",
            "hover": {
              "background": "#3730A3"
            }
          },
          "secondary": {
            "background": "#F3F4F6",
            "color": "#374151",
            "hover": {
              "background": "#E5E7EB"
            }
          },
          "success": {
            "background": "#10B981",
            "color": "white"
          },
          "warning": {
            "background": "#F59E0B",
            "color": "white"
          },
          "error": {
            "background": "#EF4444",
            "color": "white"
          }
        },
        "sizes": {
          "sm": {
            "padding": "0.5rem 1rem",
            "fontSize": "0.75rem"
          },
          "md": {
            "padding": "0.75rem 1.5rem",
            "fontSize": "0.875rem"
          },
          "lg": {
            "padding": "1rem 2rem",
            "fontSize": "1rem"
          }
        }
      },

      "statusBadge": {
        "base": {
          "padding": "0.25rem 0.75rem",
          "borderRadius": "1rem",
          "fontSize": "0.75rem",
          "fontWeight": 500,
          "textTransform": "capitalize"
        },
        "variants": {
          "completed": {
            "background": "#D1FAE5",
            "color": "#065F46"
          },
          "pending": {
            "background": "#FEF3C7",
            "color": "#92400E"
          },
          "cancelled": {
            "background": "#FEE2E2",
            "color": "#991B1B"
          }
        }
      },

      "navigation": {
        "sidebar": {
          "menuItem": {
            "padding": "0.75rem 1.5rem",
            "borderRadius": "0.5rem",
            "margin": "0 1rem 0.25rem 1rem",
            "fontSize": "0.875rem",
            "fontWeight": 500,
            "color": "#6B7280",
            "transition": "all 0.2s ease",
            "states": {
              "active": {
                "background": "#4F46E5",
                "color": "white"
              },
              "hover": {
                "background": "#F3F4F6",
                "color": "#374151"
              }
            }
          },
          "badge": {
            "background": "#EF4444",
            "color": "white",
            "borderRadius": "50%",
            "width": "1.5rem",
            "height": "1.5rem",
            "fontSize": "0.75rem",
            "fontWeight": 600
          }
        }
      },

      "table": {
        "base": {
          "width": "100%",
          "borderCollapse": "collapse"
        },
        "header": {
          "background": "#F9FAFB",
          "padding": "0.75rem 1rem",
          "fontSize": "0.75rem",
          "fontWeight": 600,
          "color": "#374151",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "borderBottom": "1px solid #E5E7EB"
        },
        "cell": {
          "padding": "1rem",
          "fontSize": "0.875rem",
          "color": "#374151",
          "borderBottom": "1px solid #F3F4F6"
        },
        "row": {
          "hover": {
            "background": "#F9FAFB"
          }
        }
      },

      "form": {
        "input": {
          "base": {
            "width": "100%",
            "padding": "0.75rem 1rem",
            "borderRadius": "0.5rem",
            "border": "1px solid #D1D5DB",
            "fontSize": "0.875rem",
            "background": "white",
            "transition": "all 0.2s ease"
          },
          "states": {
            "focus": {
              "outline": "none",
              "borderColor": "#4F46E5",
              "boxShadow": "0 0 0 3px rgba(79, 70, 229, 0.1)"
            }
          }
        },
        "searchInput": {
          "padding": "0.75rem 1rem 0.75rem 3rem",
          "paddingLeft": "3rem",
          "iconPosition": "left"
        }
      },

      "avatar": {
        "sizes": {
          "sm": "2rem",
          "md": "2.5rem",
          "lg": "3rem",
          "xl": "4rem"
        },
        "borderRadius": "50%",
        "border": "2px solid white",
        "boxShadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)"
      },

      "chart": {
        "colors": ["#4F46E5", "#10B981", "#F59E0B", "#EF4444", "#8B5CF6", "#06B6D4"],
        "gridColor": "#F3F4F6",
        "textColor": "#6B7280",
        "tooltipBackground": "rgba(17, 24, 39, 0.9)",
        "tooltipColor": "white"
      }
    },

    "patterns": {
      "dashboard": {
        "structure": {
          "layout": "sidebar + main content",
          "gridSystem": "CSS Grid with 12 columns",
          "responsiveBreakpoints": {
            "mobile": "640px",
            "tablet": "768px",
            "desktop": "1024px",
            "wide": "1280px"
          }
        },
        "metricCards": {
          "arrangement": "2x2 or 4x1 grid",
          "hierarchy": "Large number, small label, percentage change",
          "iconPlacement": "Top-right or left side",
          "colorCoding": "Green for positive, red for negative"
        },
        "dataVisualization": {
          "chartTypes": ["line", "bar", "pie", "donut", "area"],
          "commonRatios": "16:9 or 4:3 aspect ratio",
          "interactivity": "Hover states, tooltips, legends"
        }
      },

      "listViews": {
        "structure": "Header with actions + filterable table",
        "pagination": "Bottom-right, numbered with prev/next",
        "actions": "Row-level actions (3-dot menu)",
        "bulkActions": "Checkbox selection + action bar"
      },

      "notifications": {
        "positioning": "Top-right corner",
        "types": ["success", "warning", "error", "info"],
        "duration": "4-6 seconds auto-dismiss",
        "animation": "Slide-in from right"
      }
    },

    "animations": {
      "transitions": {
        "fast": "0.15s ease",
        "normal": "0.2s ease",
        "slow": "0.3s ease"
      },
      "hover": {
        "scale": "transform: scale(1.02)",
        "lift": "transform: translateY(-2px); box-shadow: 0 10px 25px rgba(0,0,0,0.15)"
      },
      "loading": {
        "skeleton": "Linear gradient shimmer effect",
        "spinner": "Rotating border animation"
      }
    },

    "accessibility": {
      "contrast": {
        "minimum": "4.5:1 for normal text",
        "enhanced": "7:1 for important elements"
      },
      "focusIndicator": {
        "outline": "2px solid #4F46E5",
        "outlineOffset": "2px"
      },
      "screenReader": {
        "labels": "aria-label for interactive elements",
        "descriptions": "aria-describedby for complex components"
      }
    },

    "responsive": {
      "mobile": {
        "sidebar": "Collapsed to hamburger menu",
        "cards": "Single column stack",
        "tables": "Horizontal scroll or card layout"
      },
      "tablet": {
        "sidebar": "Condensed with icons only",
        "cards": "2-column grid"
      },
      "desktop": {
        "sidebar": "Full width with labels",
        "cards": "3-4 column grid depending on content"
      }
    }
  }
}